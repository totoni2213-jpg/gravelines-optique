---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import contactData from '../data/contact.json';

const horaires = contactData.horaires;
const { adresse, ville, telephone, email, avantages } = contactData;
---

<Layout
  title="Contact & Horaires | Opticien à Montivilliers — Gravelines Optique"
  description="Votre opticien à Montivilliers ouvert mar–sam. Parking gratuit, accès PMR. Contact et rendez-vous en ligne. 27 rue Léon Gambetta, 76290 Montivilliers."
>
  <Header />

  <!-- ══ SPLIT SCREEN CONTACT ══════════════════════════════════════════════ -->
  <div class="min-h-screen pt-[74px] flex flex-col lg:flex-row">

    <!-- ── LEFT — Dark info panel ─────────────────────────────────────── -->
    <div class="lg:w-[45%] bg-dark relative overflow-hidden flex flex-col">
      <!-- Decor -->
      <div class="absolute inset-0 bg-dots-dark pointer-events-none"></div>
      <div class="absolute -top-20 -left-20 w-72 h-72 rounded-full bg-gold/[0.04] blur-3xl pointer-events-none"></div>
      <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gold/50 to-transparent"></div>

      <div class="relative z-10 flex-1 flex flex-col justify-center px-8 py-14 sm:px-12 lg:px-14 xl:px-18">

        <!-- Header -->
        <div class="mb-12">
          <span class="section-label mb-5 block">Nous trouver</span>
          <h1 class="font-serif text-[2.8rem] sm:text-[3.2rem] text-white leading-[1.1]">
            Contact &<br /><em class="text-gold italic">Horaires</em>
          </h1>
        </div>

        <!-- Contact info blocks -->
        <div class="space-y-7 mb-12">

          <!-- Adresse -->
          <div class="flex gap-5 group">
            <div class="w-11 h-11 rounded-sm bg-gold/10 border border-gold/20 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-all duration-300">
              <svg class="w-4.5 h-4.5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-[10px] text-white/30 uppercase tracking-[0.16em] font-semibold mb-1.5">Adresse</div>
              <address class="text-white/70 text-[14px] leading-relaxed not-italic">{adresse}<br />{ville}</address>
              <a
                href={`https://maps.google.com/?q=${encodeURIComponent(adresse + ', ' + ville)}`}
                target="_blank"
                rel="noopener"
                class="text-gold/50 hover:text-gold text-[12px] mt-2 inline-flex items-center gap-1.5 transition-colors group/map"
              >
                Voir sur Google Maps
                <svg class="w-3 h-3 group-hover/map:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
          </div>

          <!-- Téléphone -->
          <div class="flex gap-5 group">
            <div class="w-11 h-11 rounded-sm bg-gold/10 border border-gold/20 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-all duration-300">
              <svg class="w-4.5 h-4.5 text-gold" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
            </div>
            <div>
              <div class="text-[10px] text-white/30 uppercase tracking-[0.16em] font-semibold mb-1.5">Téléphone</div>
              <a href={`tel:${telephone.replace(/\s/g, '')}`} class="text-gold text-[1.3rem] font-medium hover:text-gold-light transition-colors">{telephone}</a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex gap-5 group">
            <div class="w-11 h-11 rounded-sm bg-gold/10 border border-gold/20 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-all duration-300">
              <svg class="w-4.5 h-4.5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
              </svg>
            </div>
            <div>
              <div class="text-[10px] text-white/30 uppercase tracking-[0.16em] font-semibold mb-1.5">Email</div>
              <a href={`mailto:${email}`} class="text-white/60 hover:text-white text-[14px] transition-colors break-all">{email}</a>
            </div>
          </div>
        </div>

        <!-- Avantages badges -->
        <div class="flex flex-wrap gap-2 mb-10">
          {(avantages as string[]).map((av) => (
            <span class="inline-flex items-center gap-1.5 text-[11.5px] bg-white/[0.05] border border-white/[0.08] text-white/45 px-3 py-1.5 rounded-full hover:border-gold/30 hover:text-white/60 transition-colors duration-200">
              <svg class="w-3 h-3 text-gold/70 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              {av}
            </span>
          ))}
        </div>

        <!-- Horaires -->
        <div>
          <div class="text-[10px] text-white/30 uppercase tracking-[0.16em] font-semibold mb-4">Horaires d'ouverture</div>
          <div class="space-y-0.5 rounded-sm overflow-hidden border border-white/[0.07]">
            {horaires.map((h: { jour: string; heures: string; ferme: boolean }) => {
              const todayFr = new Date().toLocaleDateString('fr-FR', { weekday: 'long' });
              const todayCapitalized = todayFr.charAt(0).toUpperCase() + todayFr.slice(1);
              const isToday = todayCapitalized === h.jour;
              return (
                <div class={`flex justify-between items-center px-4 py-3 text-[13.5px] transition-colors
                  ${isToday ? 'bg-gold/12 border-l-2 border-gold' : 'bg-white/[0.02] hover:bg-white/[0.04] border-l-2 border-transparent'}`}>
                  <span class={`font-medium ${h.ferme ? 'text-white/20' : isToday ? 'text-gold' : 'text-white/55'}`}>
                    {h.jour}
                    {isToday && (
                      <span class="ml-2 text-[10px] bg-gold text-dark px-2 py-0.5 rounded-full font-bold">Aujourd'hui</span>
                    )}
                  </span>
                  <span class={`tabular-nums ${h.ferme ? 'text-white/18 italic text-[12.5px]' : isToday ? 'text-gold font-semibold' : 'text-white/40'}`}>
                    {h.heures}
                  </span>
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </div>

    <!-- ── RIGHT — Map + Form ─────────────────────────────────────────── -->
    <div class="lg:w-[55%] bg-white flex flex-col">
      <div class="flex-1 flex flex-col px-8 py-12 sm:px-12 lg:px-14 xl:px-18">

        <!-- Map -->
        <div class="rounded-sm overflow-hidden mb-10 flex-shrink-0 shadow-card border border-cream-dark/60" style="height: 220px;">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2594.1234567890123!2d0.18!3d49.54!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2s27+rue+L%C3%A9on+Gambetta%2C+76290+Montivilliers!5e0!3m2!1sfr!2sfr!4v1234567890"
            width="100%"
            height="220"
            style="border:0; filter: grayscale(10%) contrast(1.05);"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Gravelines Optique - 27 rue Léon Gambetta, Montivilliers"
          ></iframe>
        </div>

        <!-- Form header -->
        <div class="mb-8">
          <span class="section-label mb-3 block" style="--gold: #B8924A; color: var(--gold);">Message</span>
          <h2 class="font-serif text-[2rem] sm:text-[2.4rem] text-dark leading-tight">Nous contacter</h2>
        </div>

        <!-- Form -->
        <form name="contact" method="POST" action="#" class="space-y-5 flex-1">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="form-field">
              <label class="form-label" for="prenom">Prénom <span class="text-gold">*</span></label>
              <input type="text" id="prenom" name="prenom" required class="form-input" placeholder="Votre prénom" />
            </div>
            <div class="form-field">
              <label class="form-label" for="nom">Nom <span class="text-gold">*</span></label>
              <input type="text" id="nom" name="nom" required class="form-input" placeholder="Votre nom" />
            </div>
          </div>

          <div class="form-field">
            <label class="form-label" for="email">Email <span class="text-gold">*</span></label>
            <input type="email" id="email" name="email" required class="form-input" placeholder="votre@email.fr" />
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="form-field">
              <label class="form-label" for="telephone">Téléphone</label>
              <input type="tel" id="telephone" name="telephone" class="form-input" placeholder="06 XX XX XX XX" />
            </div>
            <div class="form-field">
              <label class="form-label" for="sujet">Sujet</label>
              <select id="sujet" name="sujet" class="form-input">
                <option value="">Choisir...</option>
                <option value="rdv">Prendre rendez-vous</option>
                <option value="info">Demande d'information</option>
                <option value="sav">SAV / Réparation</option>
                <option value="devis">Demande de devis</option>
                <option value="autre">Autre</option>
              </select>
            </div>
          </div>

          <div class="form-field">
            <label class="form-label" for="message">Message <span class="text-gold">*</span></label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="form-input resize-none"
              placeholder="Votre message..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="btn-primary w-full justify-center"
            style="background: var(--dark); color: white;"
          >
            Envoyer le message
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
            </svg>
          </button>

          <p class="text-dark/30 text-[12px] text-center">
            Ou appelez-nous directement :
            <a href="tel:0235209978" class="text-gold hover:text-gold-dark transition-colors font-medium">&nbsp;02 35 20 99 78</a>
          </p>
        </form>
      </div>
    </div>
  </div>

  <Footer />
</Layout>

<style>
  .form-field { display: flex; flex-direction: column; gap: 6px; }

  .form-label {
    font-size: 10.5px;
    font-weight: 700;
    color: rgba(26,26,26,0.45);
    text-transform: uppercase;
    letter-spacing: 0.14em;
  }

  .form-input {
    width: 100%;
    border: 1.5px solid rgba(26,26,26,0.1);
    border-radius: 4px;
    padding: 11px 14px;
    font-size: 14px;
    color: #1A1A1A;
    background: rgba(248,244,238,0.4);
    font-family: 'Inter', system-ui, sans-serif;
    transition: border-color 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
    outline: none;
    -webkit-appearance: none;
  }

  .form-input::placeholder { color: rgba(26,26,26,0.25); }

  .form-input:focus {
    border-color: #C9A961;
    background: white;
    box-shadow: 0 0 0 3px rgba(201,169,97,0.1);
  }

  .form-input:hover:not(:focus) {
    border-color: rgba(26,26,26,0.22);
  }

  select.form-input { cursor: pointer; }
</style>
