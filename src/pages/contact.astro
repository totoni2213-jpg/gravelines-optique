---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import contactData from '../data/contact.json';

const horaires = contactData.horaires;
const { adresse, ville, telephone, email, avantages } = contactData;
---

<Layout
  title="Contact & Horaires | Opticien à Montivilliers — Gravelines Optique"
  description="Votre opticien à Montivilliers ouvert mar–sam. Parking gratuit, accès PMR. Contact et rendez-vous en ligne. 27 rue Léon Gambetta, 76290 Montivilliers."
>
  <Header />

  <!-- SPLIT SCREEN CONTACT -->
  <div class="min-h-screen pt-20 flex flex-col lg:flex-row">

    <!-- LEFT — Dark info panel -->
    <div class="lg:w-5/12 bg-dark relative overflow-hidden flex flex-col">
      <!-- Dot pattern -->
      <div class="absolute inset-0 opacity-[0.04]">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, #C9A961 1px, transparent 0); background-size: 36px 36px;"></div>
      </div>
      <!-- Gold top line -->
      <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gold to-transparent"></div>

      <div class="relative z-10 flex-1 flex flex-col justify-center px-10 py-16 lg:px-14 xl:px-20">
        <!-- Header -->
        <div class="mb-12">
          <div class="text-gold text-xs tracking-widest uppercase font-medium mb-5">Nous trouver</div>
          <h1 class="font-serif text-5xl sm:text-6xl text-white leading-tight mb-0">
            Contact &<br /><em class="text-gold">Horaires</em>
          </h1>
        </div>

        <!-- Contact info -->
        <div class="space-y-8 mb-12">
          <div class="flex gap-5 group">
            <div class="w-11 h-11 rounded-sm bg-gold/10 border border-gold/20 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-colors">
              <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-white/40 text-xs uppercase tracking-widest mb-1.5">Adresse</div>
              <div class="text-white text-sm leading-relaxed">{adresse}<br />{ville}</div>
              <a
                href={`https://maps.google.com/?q=${encodeURIComponent(adresse + ', ' + ville)}`}
                target="_blank"
                rel="noopener"
                class="text-gold/60 hover:text-gold text-xs mt-1.5 inline-flex items-center gap-1 transition-colors"
              >
                Voir sur Google Maps
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </a>
            </div>
          </div>

          <div class="flex gap-5 group">
            <div class="w-11 h-11 rounded-sm bg-gold/10 border border-gold/20 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-colors">
              <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
            </div>
            <div>
              <div class="text-white/40 text-xs uppercase tracking-widest mb-1.5">Téléphone</div>
              <a href={`tel:${telephone.replace(/\s/g, '')}`} class="text-gold text-lg font-medium hover:text-gold-light transition-colors">{telephone}</a>
            </div>
          </div>

          <div class="flex gap-5 group">
            <div class="w-11 h-11 rounded-sm bg-gold/10 border border-gold/20 flex items-center justify-center flex-shrink-0 group-hover:bg-gold/20 transition-colors">
              <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
              </svg>
            </div>
            <div>
              <div class="text-white/40 text-xs uppercase tracking-widest mb-1.5">Email</div>
              <a href={`mailto:${email}`} class="text-white/70 hover:text-white text-sm transition-colors">{email}</a>
            </div>
          </div>
        </div>

        <!-- Avantages -->
        <div class="flex flex-wrap gap-2 mb-10">
          {(avantages as string[]).map((av) => (
            <span class="inline-flex items-center gap-1.5 text-xs bg-white/5 border border-white/10 text-white/50 px-3 py-1.5 rounded-full">
              <svg class="w-3 h-3 text-gold" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              {av}
            </span>
          ))}
        </div>

        <!-- Horaires -->
        <div>
          <div class="text-white/40 text-xs uppercase tracking-widest mb-5">Horaires d'ouverture</div>
          <div class="space-y-1">
            {horaires.map((h: { jour: string; heures: string; ferme: boolean }) => {
              const todayFr = new Date().toLocaleDateString('fr-FR', { weekday: 'long' });
              const todayCapitalized = todayFr.charAt(0).toUpperCase() + todayFr.slice(1);
              const isToday = todayCapitalized === h.jour;
              return (
                <div class={`flex justify-between items-center py-2.5 px-3 rounded-sm text-sm transition-colors
                  ${isToday ? 'bg-gold/10 border border-gold/20' : ''}`}>
                  <span class={`${h.ferme ? 'text-white/25' : isToday ? 'text-gold font-medium' : 'text-white/60'}`}>
                    {h.jour}
                    {isToday && <span class="ml-2 text-xs bg-gold text-dark px-2 py-0.5 rounded-full font-medium">Aujourd'hui</span>}
                  </span>
                  <span class={`text-sm ${h.ferme ? 'text-white/20 italic' : isToday ? 'text-gold font-medium' : 'text-white/50'}`}>
                    {h.heures}
                  </span>
                </div>
              );
            })}
          </div>
        </div>
      </div>
    </div>

    <!-- RIGHT — Form panel -->
    <div class="lg:w-7/12 bg-white flex flex-col">
      <div class="flex-1 flex flex-col px-10 py-16 lg:px-14 xl:px-20">

        <!-- Google Maps -->
        <div class="rounded-sm overflow-hidden mb-12 flex-shrink-0" style="height: 240px;">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2594.1234567890123!2d0.18!3d49.54!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2s27+rue+L%C3%A9on+Gambetta%2C+76290+Montivilliers!5e0!3m2!1sfr!2sfr!4v1234567890"
            width="100%"
            height="240"
            style="border:0; filter: grayscale(20%);"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Gravelines Optique - 27 rue Léon Gambetta, Montivilliers"
          ></iframe>
        </div>

        <!-- Form heading -->
        <div class="mb-8">
          <div class="text-gold text-xs tracking-widest uppercase font-medium mb-3">Message</div>
          <h2 class="font-serif text-3xl sm:text-4xl text-dark">Nous contacter</h2>
        </div>

        <!-- Contact Form -->
        <form name="contact" method="POST" action="#" class="space-y-5 flex-1">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-xs font-medium text-dark/50 uppercase tracking-widest mb-2" for="prenom">Prénom</label>
              <input
                type="text"
                id="prenom"
                name="prenom"
                required
                class="w-full border border-dark/10 rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/25"
                placeholder="Votre prénom"
              />
            </div>
            <div>
              <label class="block text-xs font-medium text-dark/50 uppercase tracking-widest mb-2" for="nom">Nom</label>
              <input
                type="text"
                id="nom"
                name="nom"
                required
                class="w-full border border-dark/10 rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/25"
                placeholder="Votre nom"
              />
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-dark/50 uppercase tracking-widest mb-2" for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full border border-dark/10 rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/25"
              placeholder="votre@email.fr"
            />
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-xs font-medium text-dark/50 uppercase tracking-widest mb-2" for="telephone">Téléphone</label>
              <input
                type="tel"
                id="telephone"
                name="telephone"
                class="w-full border border-dark/10 rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/25"
                placeholder="06 XX XX XX XX"
              />
            </div>
            <div>
              <label class="block text-xs font-medium text-dark/50 uppercase tracking-widest mb-2" for="sujet">Sujet</label>
              <select
                id="sujet"
                name="sujet"
                class="w-full border border-dark/10 rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30"
              >
                <option value="">Choisir...</option>
                <option value="rdv">Prendre rendez-vous</option>
                <option value="info">Demande d'information</option>
                <option value="sav">SAV / Réparation</option>
                <option value="devis">Demande de devis</option>
                <option value="autre">Autre</option>
              </select>
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-dark/50 uppercase tracking-widest mb-2" for="message">Message</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full border border-dark/10 rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/25 resize-none"
              placeholder="Votre message..."
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-dark hover:bg-dark/80 text-white font-semibold py-4 rounded-sm transition-colors text-sm tracking-widest uppercase"
          >
            Envoyer le message
          </button>
          <p class="text-dark/35 text-xs text-center pt-1">
            Ou appelez-nous : <a href="tel:0235209978" class="text-gold hover:text-gold-dark transition-colors">02 35 20 99 78</a>
          </p>
        </form>
      </div>
    </div>

  </div>

  <Footer />
</Layout>
