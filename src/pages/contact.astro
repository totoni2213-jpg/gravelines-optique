---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import contactData from '../data/contact.json';

const horaires = contactData.horaires;
const { nom, adresse, ville, telephone, email } = contactData;
---

<Layout
  title="Contact & Horaires | Opticien √† Montivilliers ‚Äî Gravelines Optique"
  description="Votre opticien √† Montivilliers ouvert mar‚Äìsam. Parking gratuit, acc√®s PMR. Contact et rendez-vous en ligne. 27 rue L√©on Gambetta, 76290 Montivilliers."
>
  <Header />

  <!-- Hero -->
  <section class="pt-32 pb-16 bg-dark text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, #C9A961 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="text-gold text-xs tracking-widest uppercase font-medium mb-4">Nous trouver</div>
      <h1 class="font-serif text-5xl sm:text-6xl text-white mb-6">
        Contact & <em class="text-gold">Horaires</em>
      </h1>
      <p class="text-white/60 text-lg max-w-xl mx-auto">
        27 rue L√©on Gambetta, 76290 Montivilliers ‚Äî Parking gratuit, acc√®s PMR.
      </p>
    </div>
  </section>

  <!-- Contact Info + Map -->
  <section class="py-16 bg-cream">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">

        <!-- Left: Info + Hours + Form -->
        <div class="space-y-8">

          <!-- Infos pratiques -->
          <div class="reveal bg-white border border-cream-dark rounded-sm p-8">
            <h2 class="font-serif text-2xl text-dark mb-6">Informations pratiques</h2>
            <div class="space-y-5">
              <div class="flex gap-4">
                <div class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-dark text-sm mb-0.5">Adresse</div>
                  <div class="text-dark/60 text-sm">{adresse}<br />{ville}</div>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-dark text-sm mb-0.5">T√©l√©phone</div>
                  <a href={`tel:${telephone.replace(/\s/g, '')}`} class="text-gold hover:text-gold-dark text-sm font-medium transition-colors">{telephone}</a>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="w-10 h-10 rounded-full bg-gold/10 flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <div class="font-medium text-dark text-sm mb-0.5">Email</div>
                  <a href={`mailto:${email}`} class="text-gold hover:text-gold-dark text-sm font-medium transition-colors">{email}</a>
                </div>
              </div>
              <div class="pt-3 border-t border-cream-dark flex flex-wrap gap-3">
                <span class="inline-flex items-center gap-1.5 text-xs bg-cream-dark text-dark/70 px-3 py-1.5 rounded-full">
                  üÖøÔ∏è Parking gratuit
                </span>
                <span class="inline-flex items-center gap-1.5 text-xs bg-cream-dark text-dark/70 px-3 py-1.5 rounded-full">
                  ‚ôø Acc√®s PMR
                </span>
                <span class="inline-flex items-center gap-1.5 text-xs bg-cream-dark text-dark/70 px-3 py-1.5 rounded-full">
                  üí≥ Tiers payant
                </span>
              </div>
            </div>
          </div>

          <!-- Horaires -->
          <div class="reveal bg-white border border-cream-dark rounded-sm p-8">
            <h2 class="font-serif text-2xl text-dark mb-6">Horaires d'ouverture</h2>
            <div class="space-y-2">
              {horaires.map((h) => {
                const isToday = new Date().toLocaleDateString('fr-FR', { weekday: 'long' }).charAt(0).toUpperCase() + new Date().toLocaleDateString('fr-FR', { weekday: 'long' }).slice(1) === h.jour;
                return (
                  <div class={`flex justify-between items-center py-2.5 px-3 rounded-sm text-sm transition-colors
                    ${isToday ? 'bg-gold/10 border border-gold/30' : 'hover:bg-cream/50'}`}>
                    <span class={`font-medium ${h.ferme ? 'text-dark/40' : isToday ? 'text-gold-dark' : 'text-dark'}`}>
                      {h.jour}
                      {isToday && <span class="ml-2 text-xs bg-gold text-dark px-1.5 py-0.5 rounded-full">Aujourd'hui</span>}
                    </span>
                    <span class={`${h.ferme ? 'text-dark/30 italic' : isToday ? 'text-gold-dark font-medium' : 'text-dark/70'}`}>
                      {h.heures}
                    </span>
                  </div>
                );
              })}
            </div>
          </div>
        </div>

        <!-- Right: Map + Form -->
        <div class="space-y-8">

          <!-- Google Maps -->
          <div class="reveal rounded-sm overflow-hidden border border-cream-dark" style="height: 300px;">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2594.1234567890123!2d0.18!3d49.54!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2s27+rue+L%C3%A9on+Gambetta%2C+76290+Montivilliers!5e0!3m2!1sfr!2sfr!4v1234567890"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Gravelines Optique - 27 rue L√©on Gambetta, Montivilliers"
            ></iframe>
          </div>

          <!-- Contact Form -->
          <div class="reveal bg-white border border-cream-dark rounded-sm p-8">
            <h2 class="font-serif text-2xl text-dark mb-6">Nous contacter</h2>
            <form
              name="contact"
              method="POST"
              action="#"
              class="space-y-5"
            >
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <label class="block text-xs font-medium text-dark/60 uppercase tracking-wide mb-2" for="prenom">Pr√©nom</label>
                  <input
                    type="text"
                    id="prenom"
                    name="prenom"
                    required
                    class="w-full border border-cream-dark rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/30"
                    placeholder="Votre pr√©nom"
                  />
                </div>
                <div>
                  <label class="block text-xs font-medium text-dark/60 uppercase tracking-wide mb-2" for="nom">Nom</label>
                  <input
                    type="text"
                    id="nom"
                    name="nom"
                    required
                    class="w-full border border-cream-dark rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/30"
                    placeholder="Votre nom"
                  />
                </div>
              </div>
              <div>
                <label class="block text-xs font-medium text-dark/60 uppercase tracking-wide mb-2" for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full border border-cream-dark rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/30"
                  placeholder="votre@email.fr"
                />
              </div>
              <div>
                <label class="block text-xs font-medium text-dark/60 uppercase tracking-wide mb-2" for="telephone">T√©l√©phone (optionnel)</label>
                <input
                  type="tel"
                  id="telephone"
                  name="telephone"
                  class="w-full border border-cream-dark rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/30"
                  placeholder="06 XX XX XX XX"
                />
              </div>
              <div>
                <label class="block text-xs font-medium text-dark/60 uppercase tracking-wide mb-2" for="sujet">Sujet</label>
                <select
                  id="sujet"
                  name="sujet"
                  class="w-full border border-cream-dark rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30"
                >
                  <option value="">Choisir un sujet...</option>
                  <option value="rdv">Prendre rendez-vous</option>
                  <option value="info">Demande d'information</option>
                  <option value="sav">SAV / R√©paration</option>
                  <option value="devis">Demande de devis</option>
                  <option value="autre">Autre</option>
                </select>
              </div>
              <div>
                <label class="block text-xs font-medium text-dark/60 uppercase tracking-wide mb-2" for="message">Message</label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  required
                  class="w-full border border-cream-dark rounded-sm px-4 py-3 text-sm text-dark focus:border-gold focus:ring-0 focus:outline-none transition-colors bg-cream/30 placeholder-dark/30 resize-none"
                  placeholder="Votre message..."
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-dark hover:bg-dark/80 text-white font-semibold py-4 rounded-sm transition-colors text-sm tracking-wide"
              >
                Envoyer le message
              </button>
              <p class="text-dark/40 text-xs text-center">
                Ou appelez-nous directement : <a href="tel:0235209978" class="text-gold">02 35 20 99 78</a>
              </p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
