---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

let articles: any[] = [];
try {
  const allArticles = await getCollection('articles');
  articles = allArticles
    .filter((a: any) => a.data.publie !== false)
    .sort((a: any, b: any) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
} catch (e) {
  articles = [];
}

const categories = ['Tous', 'D√©fauts visuels', 'Sant√© oculaire', 'Pratique', 'Enfants'];

function formatDate(date: string | Date) {
  return new Date(date).toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' });
}

function readingTime(body: string) {
  const words = (body || '').trim().split(/\s+/).length;
  const minutes = Math.max(1, Math.ceil(words / 200));
  return `${minutes} min`;
}

const featured = articles[0];
const rest = articles.slice(1);
---

<Layout
  title="Conseils & Sant√© visuelle | Gravelines Optique Montivilliers"
  description="Comprendre la myopie, l'astigmatisme, la presbytie, le glaucome... Tous nos conseils et guides pratiques pour mieux comprendre votre vision."
>
  <Header />

  <!-- Hero -->
  <section class="pt-32 pb-16 bg-dark text-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, #C9A961 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="inline-flex items-center gap-2 text-gold text-xs tracking-widest uppercase font-medium mb-5 bg-gold/10 border border-gold/20 px-4 py-2 rounded-full">
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        Nos guides optique
      </div>
      <h1 class="font-serif text-5xl sm:text-6xl text-white mb-5">
        Comprendre <em class="text-gold">votre vision</em>
      </h1>
      <p class="text-white/60 text-lg max-w-2xl mx-auto mb-6">
        Myopie, astigmatisme, presbytie, glaucome... Nos opticiens r√©pondent aux questions que vous n'osez pas toujours poser.
      </p>
      <div class="text-white/30 text-sm">
        {articles.length} articles √©crits par votre √©quipe d'opticiens √† Montivilliers
      </div>
    </div>
  </section>

  <!-- Filtres cat√©gories -->
  <div class="sticky top-0 z-30 bg-white border-b border-cream-dark shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-2 overflow-x-auto py-3 scrollbar-hide" id="filters">
        {categories.map((cat) => (
          <button
            data-cat={cat}
            class={`filter-btn flex-shrink-0 px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 border ${cat === 'Tous' ? 'bg-dark text-white border-dark' : 'bg-white text-dark/60 border-cream-dark hover:border-dark hover:text-dark'}`}
          >
            {cat}
          </button>
        ))}
      </div>
    </div>
  </div>

  <section class="py-12 bg-cream min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

      {articles.length === 0 ? (
        <div class="text-center py-24 text-dark/40">
          <div class="text-6xl mb-6">üëÅÔ∏è</div>
          <p class="font-serif text-2xl mb-2">Les articles arrivent bient√¥t !</p>
        </div>
      ) : (
        <>
          <!-- Article √† la une -->
          {featured && (
            <div class="mb-12 article-card" data-cat={featured.data.categorie || ''}>
              <a
                href={`/articles/${featured.slug}`}
                class="group grid grid-cols-1 lg:grid-cols-2 bg-white border border-cream-dark hover:border-gold rounded-sm overflow-hidden transition-all duration-300 hover:shadow-xl"
              >
                {featured.data.image ? (
                  <div class="aspect-[16/9] lg:aspect-auto lg:min-h-[320px] overflow-hidden">
                    <img
                      src={featured.data.image}
                      alt={featured.data.titre}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700"
                    />
                  </div>
                ) : (
                  <div class="lg:min-h-[320px] bg-gradient-to-br from-dark to-dark/80 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gold/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  </div>
                )}
                <div class="p-8 lg:p-12 flex flex-col justify-center">
                  <div class="flex items-center gap-3 mb-5">
                    <span class="inline-block text-xs font-semibold text-gold bg-gold/10 border border-gold/20 px-3 py-1.5 rounded-full uppercase tracking-wider">
                      √Ä la une
                    </span>
                    {featured.data.categorie && (
                      <span class="text-xs text-dark/40 font-medium">{featured.data.categorie}</span>
                    )}
                  </div>
                  <h2 class="font-serif text-3xl lg:text-4xl text-dark mb-4 group-hover:text-gold-dark transition-colors leading-snug">
                    {featured.data.titre}
                  </h2>
                  <p class="text-dark/60 leading-relaxed mb-6">
                    {featured.data.description}
                  </p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3 text-dark/40 text-sm">
                      <time>{formatDate(featured.data.date)}</time>
                      <span>¬∑</span>
                      <span>{readingTime(featured.body)}</span>
                    </div>
                    <span class="text-gold text-sm font-medium flex items-center gap-1.5 group-hover:gap-3 transition-all">
                      Lire l'article
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            </div>
          )}

          <!-- Grille des autres articles -->
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" id="articles-grid">
            {rest.map((article: any, i: number) => (
              <a
                href={`/articles/${article.slug}`}
                data-cat={article.data.categorie || ''}
                class="article-card group bg-white border border-cream-dark hover:border-gold rounded-sm overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1 flex flex-col"
                style={`animation-delay: ${i * 40}ms`}
              >
                {article.data.image ? (
                  <div class="aspect-[16/9] overflow-hidden bg-cream-dark flex-shrink-0">
                    <img
                      src={article.data.image}
                      alt={article.data.titre}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                      loading="lazy"
                    />
                  </div>
                ) : (
                  <div class="aspect-[16/9] bg-gradient-to-br from-dark/5 to-dark/10 flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-dark/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  </div>
                )}
                <div class="p-6 flex flex-col flex-1">
                  {article.data.categorie && (
                    <span class="inline-block self-start text-xs font-medium text-gold bg-gold/10 px-2.5 py-1 rounded-full mb-3">
                      {article.data.categorie}
                    </span>
                  )}
                  <h2 class="font-serif text-lg text-dark mb-3 group-hover:text-gold-dark transition-colors leading-snug flex-1">
                    {article.data.titre}
                  </h2>
                  <p class="text-dark/55 text-sm leading-relaxed mb-4 line-clamp-2">
                    {article.data.description}
                  </p>
                  <div class="flex items-center justify-between mt-auto pt-3 border-t border-cream-dark">
                    <span class="text-dark/35 text-xs">{readingTime(article.body)}</span>
                    <span class="text-gold text-xs font-medium flex items-center gap-1 group-hover:gap-2 transition-all">
                      Lire
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                      </svg>
                    </span>
                  </div>
                </div>
              </a>
            ))}
          </div>

          <!-- Message aucun r√©sultat -->
          <div id="no-results" class="hidden text-center py-16 text-dark/40">
            <div class="text-4xl mb-4">üîç</div>
            <p class="font-serif text-xl">Aucun article dans cette cat√©gorie</p>
          </div>
        </>
      )}

      <!-- CTA bas de page -->
      <div class="mt-16 bg-dark rounded-sm p-8 sm:p-12 text-center text-white">
        <h3 class="font-serif text-3xl mb-3">Une question sur votre vision ?</h3>
        <p class="text-white/60 mb-6 max-w-xl mx-auto">
          Nos opticiens sont l√† pour vous r√©pondre. Contr√¥le de vue gratuit, sans rendez-vous.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-gold hover:bg-gold-dark text-dark font-semibold px-6 py-3 rounded-sm transition-colors">
            Prendre rendez-vous
          </a>
          <a href="tel:0235209978" class="inline-flex items-center justify-center gap-2 border border-white/20 hover:border-white text-white px-6 py-3 rounded-sm transition-colors text-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            02 35 20 99 78
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  const buttons = document.querySelectorAll<HTMLButtonElement>('.filter-btn');
  const cards = document.querySelectorAll<HTMLElement>('.article-card');
  const noResults = document.getElementById('no-results');

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      const cat = btn.dataset.cat;

      // Active state
      buttons.forEach(b => {
        b.className = b.className
          .replace('bg-dark text-white border-dark', 'bg-white text-dark/60 border-cream-dark hover:border-dark hover:text-dark');
      });
      btn.className = btn.className
        .replace('bg-white text-dark/60 border-cream-dark hover:border-dark hover:text-dark', 'bg-dark text-white border-dark');

      // Filter cards
      let visible = 0;
      cards.forEach(card => {
        const cardCat = card.dataset.cat || '';
        const show = cat === 'Tous' || cardCat === cat;
        card.style.display = show ? '' : 'none';
        if (show) visible++;
      });

      if (noResults) {
        noResults.classList.toggle('hidden', visible > 0);
      }
    });
  });
</script>

<style>
  .scrollbar-hide::-webkit-scrollbar { display: none; }
  .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
</style>
