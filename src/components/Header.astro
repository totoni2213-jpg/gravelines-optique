---
const navLinks = [
  { href: '/', label: 'Accueil' },
  { href: '/boutique', label: 'La Boutique' },
  { href: '/marques', label: 'Marques' },
  { href: '/services', label: 'Services' },
  { href: '/sav', label: 'SAV' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-dark/95 backdrop-blur-sm border-b border-white/5">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">

      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img
          src="/logos/logo-gravelines-optique.png"
          alt="Gravelines Optique"
          class="h-12 w-auto brightness-0 invert group-hover:brightness-100 group-hover:invert-0 group-hover:sepia group-hover:saturate-200 group-hover:hue-rotate-0 transition-all duration-300"
          style="filter: brightness(0) invert(1);"
        />
        <div class="hidden sm:block">
          <div class="text-white font-serif text-lg leading-tight tracking-wide">Gravelines Optique</div>
          <div class="text-gold text-xs font-light tracking-widest uppercase">Montivilliers</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-1">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`px-4 py-2 text-sm font-medium rounded-sm transition-all duration-200 tracking-wide
              ${currentPath === link.href
                ? 'text-gold'
                : 'text-white/80 hover:text-white hover:bg-white/5'
              }`}
          >
            {link.label}
          </a>
        ))}
      </nav>

      <!-- CTA + Mobile Button -->
      <div class="flex items-center gap-3">
        <a
          href="tel:0235209978"
          class="hidden md:flex items-center gap-2 bg-gold hover:bg-gold-dark text-dark text-sm font-semibold px-4 py-2 rounded-sm transition-colors duration-200"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          02 35 20 99 78
        </a>
        <button
          id="menu-btn"
          class="lg:hidden text-white hover:text-gold transition-colors p-2"
          aria-label="Menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-dark border-t border-white/10">
    <div class="px-4 py-4 space-y-1">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class={`block px-4 py-3 text-sm font-medium rounded-sm transition-colors
            ${currentPath === link.href
              ? 'text-gold bg-white/5'
              : 'text-white/80 hover:text-white hover:bg-white/5'
            }`}
        >
          {link.label}
        </a>
      ))}
      <div class="pt-3 border-t border-white/10">
        <a href="tel:0235209978" class="flex items-center gap-2 text-gold font-medium px-4 py-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          02 35 20 99 78
        </a>
      </div>
    </div>
  </div>
</header>
